.app
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background-image url('./michael.jpeg')
  background-repeat repeat

  &__image
    border-radius 50%

  &__link
    height 100%
    display flex
    text-decoration none
    flex-direction column
    align-items center
    justify-content center

  &__link-text
    width 100%
    display flex
    justify-content space-around

  &__text
    font-family 'Princess Sofia', cursive
    font-size 75px
    color white
    text-decoration none
    animation spin 3s linear forwards infinite
    margin-right 20px
    cursor pointer


@keyframes spin {
  0% { transform: scale(1, 1) }
  15% { transform: scale(0, 1) }
  30% { transform: scale(-1, 1) }
  45% { transform: scale(0, 1) }
  60% { transform: scale(1, 1) }
  100% { transform: scale(1, 1) }
}
